<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="blog">

	<insert id="insertblog" parameterType="com.javaex.vo.UserVo">	

			<![CDATA[

			insert into blog
				values (#{userno}, #{username}||'님의 블로그입니다.', '/jblog/assets/images/spring-logo.jpg')

			]]>
		
	 </insert>
	 
	 <select id="listblog" parameterType="int" resultType="com.javaex.vo.BlogVo">
	 	
			<![CDATA[

			select userNo userno,  
      			   bolgTitle bolgtitle,  
                   logoFile logofile  
            from blog  
            where userno = #{userno}

			]]>	
	 
	 </select>
	 
	 
	 <update id="updateblog" parameterType="com.javaex.vo.BlogVo">
	 		
	 		<![CDATA[

				update blog
     			       set bolgTitle = #{bolgtitle},
         			   logoFile = '/jblog/assets/images/spring-logo.jpg'
				where userno = #{userno}

			]]>	
	 
	 </update>
	 
	 
</mapper>